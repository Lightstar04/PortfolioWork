<Window x:Class="Hospital_Management.Views.Dialogs.PatientDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Hospital_Management.Views.Dialogs"
        mc:Ignorable="d"
        Title="Patient Details"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Details">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Height="40"
                        IsReadOnly="True"
                        md:HintAssist.Hint="Firstname"
                        Text="{Binding FirstName}"
                        Margin="15 30 15 0"
                        Padding="10" />
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Height="40"
                        IsReadOnly="True"
                        md:HintAssist.Hint="Lastname"
                        Text="{Binding LastName}"
                        Margin="15 30 15 0"
                        Padding="10" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Height="40"
                        IsReadOnly="True"
                        md:HintAssist.Hint="Phone number"
                        Text="{Binding PhoneNumber}"
                        Margin="15 30 15 0"
                        Padding="10" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Height="40"
                        IsReadOnly="True"
                        md:HintAssist.Hint="Birthdate"
                        Text="{Binding BirthDate}"
                        Margin="15 30 15 0"
                        Padding="10" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="4"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Height="40"
                        IsReadOnly="True"
                        md:HintAssist.Hint="Gender"
                        Text="{Binding Gender}"
                        Margin="15 30 15 0"
                        Padding="10" />
                </Grid>
            </TabItem>
            <TabItem Header="Appointments">
                <StackPanel>
                    <Label
                        Content="{Binding AppointmentsTitle}"
                        FontSize="30"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Margin="0 50 0 0"/>
                    <md:Card
                        Margin="25">
                        <DataGrid
                            ItemsSource="{Binding Appointments}"
                            Margin="0 25 0 0"
                            CanUserResizeColumns="False"
                            CanUserResizeRows="False"
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Header="Id"
                                    Binding="{Binding Id}"
                                    Width="75" />
                                <DataGridTextColumn
                                    Header="Doctor"
                                    Binding="{Binding Doctor}"
                                    Width="200"/>
                                <DataGridTextColumn
                                    Header="Status"
                                    Binding="{Binding AppointmentStatus}"
                                    Width="150"/>
                                <DataGridTextColumn
                                    Header="Date"
                                    Binding="{Binding Date}"
                                    Width="125"/>
                                <DataGridTextColumn
                                    Header="Time"
                                    Binding="{Binding Time}"
                                    Width="125"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </md:Card>
                </StackPanel>
            </TabItem>
            <TabItem Header="History">
                <StackPanel>
                    <Label
                        Content="{Binding HistoryLabel}"
                        HorizontalAlignment="Center"
                        Margin="25"
                        FontWeight="Bold"
                        FontSize="20"/>
                    <md:Card
                        Margin="50 25 50 25">
                        <DataGrid
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding Visits}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Binding="{Binding Id}"
                                    Header="Id"
                                    Width="75" />
                                <DataGridTextColumn
                                    Binding="{Binding Appointment.Date}"
                                    Header="Date"
                                    Width="125" />
                                <DataGridTextColumn
                                    Binding="{Binding Appointment.Time}"
                                    Header="Time"
                                    Width="125" />
                                <DataGridTextColumn
                                    Binding="{Binding Appointment.Doctor}"
                                    Header="Doctor"
                                    Width="Auto" />
                                <DataGridTextColumn
                                    Binding="{Binding TotalDue, StringFormat=N2}"
                                    Header="Total Due"
                                    Width="150" />
                                <DataGridTemplateColumn Width="3*" Header="Comments">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding CommentsShort}">
                                                <Label.ToolTip>
                                                    <ToolTip Content="{Binding Comments}"/>
                                                </Label.ToolTip>
                                            </Label>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </md:Card>
                </StackPanel>
            </TabItem>
        </TabControl>
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Style="{StaticResource MaterialDesignPaperDarkButton}"
            Content="Close"
            Click="Close_Click"
            HorizontalAlignment="Center"
            Margin="20 0 20 55"
            Width="100" />
    </Grid>
</Window>
