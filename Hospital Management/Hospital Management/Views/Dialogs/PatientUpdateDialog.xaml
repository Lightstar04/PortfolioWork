<Window x:Class="Hospital_Management.Views.Dialogs.PatientUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Hospital_Management.Views.Dialogs"
        mc:Ignorable="d"
        Title="Update Patient"
        WindowStartupLocation="CenterScreen"
        Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label 
            Grid.Row="0"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Update Patient Details"
            FontWeight="Bold"
            FontSize="20" 
            Margin="0 20 0 0"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Height="40" md:HintAssist.Hint="Firstname"
            Text="{Binding FirstName}"
            Margin="15 0"
            Padding="10" />
        <TextBox
            Grid.Row="1"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Height="40" md:HintAssist.Hint="Lastname"
            Text="{Binding LastName}"
            Margin="15 0"
            Padding="10" />
        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Height="40" md:HintAssist.Hint="Phone number"
            Text="{Binding PhoneNumber}"
            Margin="15 0"
            Padding="10" />
        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Height="40" md:HintAssist.Hint="Birthdate"
            Text="{Binding BirthDate}"
            Margin="15 0"
            Padding="10" />
        <TextBox
            Grid.Row="2"
            Grid.Column="4"
            Grid.ColumnSpan="2"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Height="40" md:HintAssist.Hint="Gender"
            Text="{Binding Gender}"
            Margin="15 0"
            Padding="10" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="175"
            Content="Cancel"
            Margin="0 0 15 0"
            Style="{StaticResource MaterialDesignPaperDarkButton}"
            Click="Cancelled_Click"/>
        <Button
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Width="175"
            Content="Save"
            Margin="15 0 0 0"
            Background="ForestGreen"
            Click="Saved_Click"/>
    </Grid>
</Window>
