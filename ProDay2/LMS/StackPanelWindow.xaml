<Window x:Class="LMS.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS"
        mc:Ignorable="d"
        Title="StackPanelWindow" 
        Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Grid>
            <Button Content="B1" Width="50" HorizontalAlignment="Left"/>
            <Button Content="B2" Width="150" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="B3" Width="50"/>
                <Button Content="B4" Width="50"/>
            </StackPanel>
        </Grid>
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="A1" Width="50"/>
                <Button Content="A2" Width="50"/>
                <Button Content="A3" Width="50"/>
                <Button Content="A4" Width="50"/>
                <Button Content="A5" Width="50"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Content="A1" Width="50"/>
                <Button Content="A2" Width="50"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
