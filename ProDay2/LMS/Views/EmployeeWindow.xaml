<Window x:Class="LMS.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.Views"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right" Margin="0 0 50 25">
            <Button Content="Add +" 
                    Background="LightSeaGreen"
                    Foreground="White" 
                    Width="125"
                    Click="AddEmployee_Click"/>
        </StackPanel>
        <DataGrid Grid.Row="1"
            x:Name="EmployeeDataGrid" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" />
    </Grid>
</Window>
